<?php
/** @var \Perspective\BDScript\Block\Template $block */
$viewModel = $block->getData('view_model');
$collection = $viewModel->getPostCollection();

if ($collection->count() > 0) {
foreach ($collection as $item) {
echo "<pre>";
        print_r($item->getData());
        echo "</pre>";
}
} else {
echo "No posts found.";
}
